<div class="container">
    <h2>My Credits</h2>
    
    <div class="btn-group">
        <a href="/" class="btn">Back to Home</a>
        <a href="/book" class="btn btn-primary">Book Session</a>
    </div>
    
    {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
    {{/if}}
    
    <div class="credit-balance-section">
        <h3>Current Balance</h3>
        <div class="balance-display">
            <span class="balance-amount">${{formatCurrency balance}}</span>
            <span class="balance-label">Available Credits</span>
        </div>
    </div>
    
    <div class="add-credits-section">
        <h3>Add Credits</h3>
        <div class="add-credits-form">
            <div class="form-group">
                <label for="creditAmount">Amount to add to account:</label>
                <div class="amount-input-group">
                    <span class="currency-symbol">$</span>
                    <input type="number" 
                           id="creditAmount" 
                           min="20" 
                           max="500" 
                           step="1" 
                           placeholder="20"
                           class="amount-input">
                </div>
                <small class="form-text">Minimum $25, Maximum $500</small>
            </div>
            
            <div class="fee-breakdown" id="feeBreakdown" style="display: none;">
                <div class="fee-item">
                    <span>Credit amount:</span>
                    <span id="creditAmountDisplay">$0.00</span>
                </div>
                <div class="fee-item">
                    <span>Stripe processing fee:</span>
                    <span id="stripeFeeDisplay">$0.00</span>
                </div>
                <div class="fee-item total">
                    <span>Total charge:</span>
                    <span id="totalChargeDisplay">$0.00</span>
                </div>
            </div>
            
            <button class="btn btn-primary" id="addCreditsBtn" disabled>
                Add Credits
            </button>
        </div>
    </div>
    
    {{#if transactions}}
        <div class="transactions-section">
            <h3>Recent Transactions</h3>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each transactions}}
                    <tr>
                        <td data-label="Date">{{formatDate this.createdAt}}</td>
                        <td data-label="Type">
                            <span class="transaction-type transaction-{{this.kind}}">
                                {{this.kind}}
                            </span>
                        </td>
                        <td data-label="Amount" class="amount {{#if (gt this.amountCents 0)}}positive{{else}}negative{{/if}}">
                            {{#if (gt this.amountCents 0)}}+{{/if}}${{formatCurrency this.amountCents}}
                        </td>
                        <td data-label="Description">{{this.note}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    {{else}}
        <div class="no-transactions">
            <p>No transactions yet.</p>
        </div>
    {{/if}}
</div>

<script src="/public/js/credits.js"></script>

