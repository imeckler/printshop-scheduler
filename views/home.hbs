<div class="container">
    {{#if user}}
        <h2>Welcome back, {{user.name}}!</h2>
        
        <div class="btn-group">
            <a href="/book" class="btn btn-primary">Book a Slot</a>
            <a href="/my-bookings" class="btn">View My Bookings</a>
        </div>
        
        {{#if upcomingBookings}}
            <h3>Your Upcoming Bookings</h3>
            <table>
                <thead>
                    <tr>
                        <th>Date & Time</th>
                        <th>Unit</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each upcomingBookings}}
                    <tr>
                        <td data-label="Date & Time">{{formatSlot this.slot}}</td>
                        <td data-label="Unit">{{this.unit.name}}</td>
                        <td data-label="Status">{{this.status}}</td>
                        <td data-label="Actions">
                          <a href="/cancel-booking/{{this.bookingId}}" 
                              class="btn btn-sm btn-danger" 
                              onclick="return confirm('Are you sure you want to cancel this booking?')">
                              Cancel
                          </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <p>You don't have any upcoming bookings.</p>
        {{/if}}
    {{else}}
        <div class="btn-group">
            <a href="/login" class="btn btn-primary">Login to Book a slot at the printshop</a>
        </div>
    {{/if}}
</div>
